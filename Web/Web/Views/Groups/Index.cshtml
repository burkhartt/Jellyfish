@model Domain.Models.Goals.Group

@section Head{
    <script type="text/javascript" src="../../Content/js/newgoal.js"></script>    
    <script type="text/javascript">
        $(function () {
            var bucketManager = new GoalManager($('input[name="new-bucket"]'), $("#buckets"), '@Model.Id');
            bucketManager.LoadGoals();            
        });
    </script>
}

@section LeftMenuTitle {
    Groups <input type="button" id="new-group" class="btn-new" />
}

@section LeftMenu {
    <ul id="groups"></ul>
}

<h1>@Model.Title</h1>

<fieldset>
    <legend>Goals <input type="button" name="new-bucket" class="btn-new"/></legend>
    <ul id="buckets"></ul>
</fieldset>