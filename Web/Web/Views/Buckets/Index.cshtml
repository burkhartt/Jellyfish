@model Domain.Models.Tasks.Goal

@section Head{
    <script type="text/javascript" src="../../Content/js/newgoal.js"></script>
    <script type="text/javascript" src="../../Content/js/newbucket.js"></script>    
    <script type="text/javascript">
        $(function () {
            var bucketManager = new GoalManager($('input[name="new-bucket"]'), $("#buckets"), '@Model.Id');
            bucketManager.LoadGoals();
            var goalManager = new TaskManager($('input[name="new-goal"]'), $("#orphaned-goals"), '@Model.Id');
            goalManager.LoadTasks();            
        });
    </script>
}

<h1>@Html.ActionLink("Goals", "Index", "Home") &gt; @Model.Title</h1>

<fieldset>
    <legend>Unbucketed Tasks <input type="button" name="new-goal" value="New" class="btn btn-primary" /></legend>
    <ul id="orphaned-goals"></ul>
</fieldset>

<fieldset>
    <legend>"What" Goals <input type="button" name="new-bucket" value="New" class="btn btn-primary"/></legend>
    <ul id="buckets"></ul>
</fieldset>